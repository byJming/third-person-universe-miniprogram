.container {
  width: 100%;
  height: 100%;
}

view, h4, p {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

canvas {
  display: block;
  width: 100%;
  height: 100%;
}

.tooltip {
  position: fixed;
  background: rgba(0, 0, 0, 0.95);
  color: #fff;
  padding: 10px 16px;
  border-radius: 8px;
  font-size: 14px;
  z-index: 100;
  border: 1px solid rgba(255, 255, 255, 0.4);
  max-width: 280px;
  transition: opacity 0.3s, transform 0.2s;
  opacity: 1;
}

.tooltip h4 {
  margin: 0 0 4px 0;
  color: #ffd700;
  font-size: 16px;
}

.tooltip p {
  margin: 2px 0;
  color: #eee;
  font-size: 12px;
}

.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 16px;
  opacity: 0.8;
}

.hint {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0,0,0,0.8);
  color: #ccc;
  padding: 6px 12px;
  border-radius: 15px;
  font-size: 12px;
  z-index: 99;
}